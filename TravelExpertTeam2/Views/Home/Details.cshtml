@model Package
@{
    ViewData["Title"] = " | Package Details";
}
<div class="container">

    <header class="text-center container py-5 mb-4 mt-5" style="background-color: #9fafca ">
        <div class="container">
            <h1 class="fw-light text-dark">Package Details</h1>
        </div>
    </header>

    <div class="text-center">
        <img class="img-fluid" src="~/images/@Model.PkgImage" alt=@Model.PkgImage>
    </div>

    <table class="table table-bordered table-sm">
        <thead>
            <tr class="text-white" style="background-color:#0e387a">
                <th>Package:</th>
                <th>@Model.PkgName</th>
            </tr>
        </thead>
        <tbody>
            <tr><td>Description:</td><td>@Model.PkgDesc</td></tr>
            <tr><td>Price:</td><td>@Model.PkgBasePrice.ToString("c")</td></tr>
            @*<tr>
                    <td>Start Date:</td>
                    <td>
                        <input name="bookStartDate" type="date" class="form-control" style="width:auto" min=@ViewBag.CurrDt
                               onchange=@ViewBag.OnChg>
                    </td>
                </tr>
                <tr>
                    <td>End Date:</td>
                    <td><input id="endDt" name="bookEndDate" type="date" class="form-control" style="width:auto" min=@ViewBag.CurrDt></td>
                </tr>
                <tr>
                    <td>Number of Travellers:</td>
                    <td><input name="numTraveller" type="number" class="form-control" style="width:auto" min="1" max="999" value="1"></td>
                </tr>*@
        </tbody>
    </table>
    <input type="hidden" asp-for="@Model.PkgAgencyCommission" />


    <form asp-action="Add" asp-controller="Cart" method="post">
        <button type="submit" name="id" value="@Model.PackageId"
                class="btn text-white" style="background-color:#0e387a">
            Add To Cart
        </button>
        <a asp-controller="Home" asp-action="Index"
           class="btn text-white" style="background-color:#0e387a">Home</a>

    </form>
    <br />
    <br />
    <br />
    <br />
    <br />

</div>


